@model Blog.Domain.Entities.Commentary
@using Blog.WebUI.Helpers

@{
    ViewBag.Title = "Изменение комментария";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="lsidebar">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-center">Изменение комментария</h4>
        <hr />
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, "Имя автора:", htmlAttributes: new { @class = "control-label ml-3" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Content, "Текст отзыва:", htmlAttributes: new { @class = "control-label ml-3" })
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Content, htmlAttributes: new { @rows = "7", @cols = "100" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn-default" />
            </div>
        </div>
    </div>
    }
</section>
<section class="rsidebar d-none d-sm-block">
    <p class="text-center d-none d-sm-block" style="margin-bottom:0">
        Menu
    </p>
    <nav class="navbar-collapse collapse d-sm-block d-sm-inline-flex bg-light navbar-light text-center w-100">
        @Helpers.CreateList(Html)
    </nav>
</section>


